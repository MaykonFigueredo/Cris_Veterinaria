<div class="row justify-content-md-center">
    <div class="jumbotron col-6">
        <h1>EDITAR MENSAGEM:</h1> 
<form method="POST" asp-action="Alterar_Contato">
    <input asp-for="Id" type="hidden"/>

    <div class="form-group">
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email">
    </div>

    <div class="form-group">
        <label asp-for="Assunto">Assunto:</label>
        <input asp-for="Assunto">
    </div>

    <div class="form-group">
        <label asp-for="Mensagem">Mensagem:</label>
        <input asp-for="Mensagem">
    </div> 
      
        <input type="submit" class="btn btn-primary btn-lg" value="Alterar">    

</form>

  </div>
</div>

