@model List<Contato>

   <style>
    body{
        background-image: url("/imagens/Cachorro_e_Gato.JPEG");
        background-size: cover;
    }        
        input{font-size: 15px;}
    </style>
   
    <h2>Lista de Contatos</h2>

     <table border="1">
        <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Assunto</th>
                    <th>Mensagem</th>
                </tr>
        </thead>
        <tbody>
                @foreach (Contato c in Model)
                {
                   <tr>
                       <td>@c.Id</td>
                       <td>@c.Nome</td>
                       <td>@c.Email</td>
                       <td>@c.Assunto</td>
                       <td>@c.Mensagem</td>

                       <td>
                           <a href="/Contato/Alterar_Contato?Id=@c.Id">Alterar</a>
                           <a href="/Contato/Remover?Id=@c.Id">Excluir</a>

                        </td>
                   </tr> 
                }
        </tbody>

    </table>

