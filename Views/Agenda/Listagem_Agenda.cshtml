@model List<Agenda>
@{
    ViewData["Title"] = "Listagem_Agenda";
}
<h1>@ViewData["Title"]</h1>

<style>
    body{
        background-image: url("/imagens/corredor_tropeiros.jpeg");
        background-size: cover;
    }
</style>

<table border="1">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Telefone</th>
        <th>Data</th>
        <th>Animal</th>
        <th>Necessidade</th>
    </thead>
    <tbody>
        @foreach (Agenda a in Model){
            <tr>
                <td>@a.Id</td>
                <td>@a.Nome</td>
                <td>@a.Telefone</td>
                <td>@a.Data.ToShortDateString()</td>
                <td>@a.Animal</td>
                <td>@a.Necessidade</td>
             <td>
    <a href="/Agenda/Alterar?Id=@a.Id">Alterar</a>
    <a href="/Agenda/Remover?Id=@a.Id">Excluir</a>

    </td>
            </tr>
        }
        
    </tbody>

</table>
<br>
<a asp-action="Agenda">Novo Agendamento</a>

